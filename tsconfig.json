{
  "compilerOptions": {
    "target": "ESNext",
    "sourceMap": true,
    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["./src/*"],
      "@utils/*": ["./src/utils/*"]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
